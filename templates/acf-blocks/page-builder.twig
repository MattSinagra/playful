{% for item in page_builder %}
    {% if item.acf_fc_layout == "text_block" %}
        {% if item.text_block_content|length > 0 %}
            {% include 'templates/layouts/pb-text-block-layout.twig' with { content : item.text_block_content } %}
        {% endif %}
    {% endif %}

    {% if item.acf_fc_layout == "two_column_text_block" %}
        {% if item.left_column|length > 0 and item.right_column|length > 0 %}
            {% include 'templates/layouts/pb-two-column-text-block-layout.twig' with { left_col_content : item.left_column, right_col_content : item.right_column }%}
        {% endif %}
    {% endif %}

    {% if item.acf_fc_layout == "image_w_caption" %}
        {% include 'templates/layouts/pb-image-w-caption-block-layout.twig' with { item : item } %}
    {% endif %}

    {% if item.acf_fc_layout == "page_slider" %}
        {% include 'templates/layouts/pb-page-slider-block-layout.twig' %}
    {% endif %}

    {% if item.acf_fc_layout == "banner_image" %}
        {% include 'templates/layouts/pb-banner-image-block-layout.twig' with { item :  item } %}
    {% endif %}

    {% if item.acf_fc_layout == "video_block" %}
        {% include 'templates/layouts/pb-video-block-layout.twig' with { video :  item } %}
    {% endif %}
{% endfor %}