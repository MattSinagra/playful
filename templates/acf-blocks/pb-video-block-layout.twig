{% if fields.video and fields.youtube_video|length > 0 %}
    <div class="block page-builder page-builder--video-block-layout {{ block.className }}">
        <div class="container">
            <div class="row justify-content-center">
                {% if fields.video_width|length > 0 %}
                <div class="col col-12 col-md-{{ fields.video_width }}">
                    <div class="embed-container">
                        {{ fields.youtube_video }}
                    </div>
                </div>
                {% else %}
                    <div class="col col-12">
                        <div class="embed-container">
                            {{ fields.youtube_video }}
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endif %}