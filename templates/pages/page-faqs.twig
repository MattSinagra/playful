{% extends "templates/base.twig" %}

{% block content %}

    {% include 'blocks/page-header.twig' %}
    {% include 'blocks/page-introduction.twig' %}

    {% if faqs %}
        <div class="faqs--wrapper">
            <div class="container">
                <div class="row">
                    {% for post in faqs %}
                        <div class="col col-12 col-sm-6 col-md-4">
                            {% include 'blocks/content-faq.twig' %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}